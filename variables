export EDITOR="emacs"
export CVSROOT="/var/lib/cvs"
export CVSEDITOR="emacs"
export CVS_RSH="ssh"
export SVKROOT="/var/lib/svk"
export SVN_EDITOR="emacs"



# Add ~/scripts to path for my custom scripts
PATH="/usr/local/bin:/usr/local/sbin:/usr/local/mysql/bin:~/scripts:$PATH"
export PATH



### Ruby

# Load RVM into a shell session *as a function*
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"

### Added by the Heroku Toolbelt
export PATH="/usr/local/heroku/bin:$PATH"
export PATH="$PATH:$HOME/.rvm/bin" # Add RVM to PATH for scripting



### Python

# Setting PATH for Python 3.3 and 2.7 (do we need 2.7?)
PATH="/Library/Frameworks/Python.framework/Versions/3.3/bin:${PATH}"
PATH="/Library/Frameworks/Python.framework/Versions/2.7/bin:${PATH}"
export PATH

# For Python's virtualenvwrapper
export WORKON_HOME=$HOME/.virtualenvs
export VIRTUALENVWRAPPER_PYTHON=/Library/Frameworks/Python.framework/Versions/3.5/bin/python3
export VIRTUALENVWRAPPER_VIRTUALENV=/Library/Frameworks/Python.framework/Versions/3.5/bin/virtualenv
source /Library/Frameworks/Python.framework/Versions/3.5/bin/virtualenvwrapper.sh



### Node
# for cairo (node.js via homebrew) 7/10/14
export PKG_CONFIG_PATH=$PKG_CONFIG_PATH:/usr/X11/lib/pkgconfig
export PKG_CONFIG_PATH=$PKG_CONFIG_PATH:/usr/local/lib/pkgconfig
export PKG_CONFIG_PATH=$PKG_CONFIG_PATH:/opt/X11/lib/pkgconfig

export NVM_DIR="/Users/benlind/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"  # This loads nvm



