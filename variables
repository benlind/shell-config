# -*- mode: Shell-script -*-

export EDITOR="emacs"
export CVSROOT="/var/lib/cvs"
export CVSEDITOR="emacs -q"
export CVS_RSH="ssh"
export SVKROOT="/var/lib/svk"
export SVN_EDITOR="emacs -q"

# Empty alternate editor so that `emacsclient -t` automatically starts the emacs
# daemon if it isn't running (http://stackoverflow.com/a/5578718/1054633).
export ALTERNATE_EDITOR=""

# Colorize ls (must be combined with `ls --color=always` in iTerm on a server)
export CLICOLOR='true'
export LSCOLORS="gxfxcxdxbxegedabagacad"

export LESS=-RMisnf
